//全局配置，页面文件路径、窗口样式、原生导航栏（上方）、tabbar（下方）
{
	"lazyCodeLoading":"requiredComponents",
	"pages": [ //pages数组中第一项表示应用启动页，参考：https://uniapp.dcloud.io/collocation/pages
		
		{
			"path": "pages/index/index",
			"style": {
				"navigationBarTitleText": "首页"
				//开启下拉刷新
				// "enablePullDownRefresh":false
			}
		},
		{
			"path": "pages/parkinglotnavigation/parkingLotNavigation",
			"style": {
				"navigationBarTitleText": "停车场搜索",
				"enablePullDownRefresh":false
			}
		},
		{
			"path": "pages/carnavigation/carNavigation",
			"style": {
				"navigationBarTitleText": "车辆导航",
				//开启下拉刷新
				"enablePullDownRefresh":false
			}
		},
		{
			"path": "pages/findcar/findcar",
			"style": {
				"navigationBarTitleText": "反向寻车",
				//开启下拉刷新
				"enablePullDownRefresh":false
			}
		},
		{
			"path": "pages/userpage/userPage",
			"style": {
				"navigationBarTitleText": "用户主页",
				"enablePullDownRefresh":false
			}
		},
		{
			"path": "pages/carregister/carregister",
			"style": {
				"navigationBarTitleText": "车辆注册", 
				//开启下拉刷新
				"enablePullDownRefresh":false
			}
		}
		
	],
	"globalStyle": {
		"navigationBarTextStyle": "black",
		"navigationBarTitleText": "uni-app",
		"navigationBarBackgroundColor": "#0088DD",
		"backgroundColor": "#F8F8F8",
		"enablePullDownRefresh": true //全局下拉
	},
	"tabBar": {
		"color": "#7A7E83",
		"selectedColor": "#3567cc",
		"borderStyle": "black",
		"backgroundColor": "#ffffff",
		"list": [{
			"pagePath": "pages/index/index",
			"text": "首页",
			"iconPath": "static/icon/index.png", // 没选中前的图标路径
			"selectedIconPath": "static/icon/index-act.png" // 选中后的图标路径
		},{
			"pagePath": "pages/carnavigation/carNavigation",
			"text": "导航",
			"iconPath": "static/icon/navigate.png", // 没选中前的图标路径
			"selectedIconPath": "static/icon/navigate-act.png" // 选中后的图标路径
		},{
			"pagePath": "pages/findcar/findcar",
			"text": "寻车",
			"iconPath": "static/icon/search .png", // 没选中前的图标路径
			"selectedIconPath": "static/icon/search-act.png" // 选中后的图标路径
		},{ 
			"pagePath": "pages/userpage/userPage",
			"text": "我的",
			"iconPath": "static/icon/user.png", // 没选中前的图标路径
			"selectedIconPath": "static/icon/user-act.png" // 选中后的图标路径
		}]
	}
}
